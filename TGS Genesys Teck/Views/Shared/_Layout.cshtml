<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TGS_Genesys_Teck</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Title -->
    <title>TGS Genesys Teck</title>

    <!-- Font-Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="~/vendors/swiper/swiper.css" />

    <!-- Magnific-Popup CSS -->
    <link rel="stylesheet" href="~/vendors/magnific-popup/magnific-popup.css" />

    <!-- Custom Stylesheets -->
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/submenu.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />

</head>
<body>

    <!-------------------- Header Area (Start) -------------------->
    <header class="header">

        @{
            // Verifica se o usuário está autenticado e recupera os dados de ambiente
            bool usuarioAutenticado = !string.IsNullOrEmpty(Environment.GetEnvironmentVariable("USUARIO_ID"));
            string usuarioNome = Environment.GetEnvironmentVariable("USUARIO_NOME");
            string tipoUsuario = Environment.GetEnvironmentVariable("USUARIO_TIPO");
        }


        <!-- Logo -->
        <a class="logo" href="#home" style="display: flex; align-items: center; text-decoration: none;">
            <img src="~/images/Home/TGSLOGO.jpg" alt="About-Image"
                 style="width: 50px; height: 50px; margin-right: 10px;">
            <h2 style="margin: 0; font-size: 24px; color: aliceblue;">TGS Genesys</h2>
        </a>
        <!-- Logo End -->
        <!-- Navbar -->
        <nav class="navbar" style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap;">
            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fas fa-home fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#home" style="margin-left: 10px; color: white;">Inicio</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fas fa-info-circle fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#about" style="margin-left: 10px; color: white;">sobre</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fas fa-gavel fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#service" style="margin-left: 10px; color: white;">Serviço</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fas fa-window-restore fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#portfolio" style="margin-left: 10px; color: white;">Portfolio</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fa fa-users fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#testimonial" style="margin-left: 10px; color: white;">Depoimento</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fa fa-file fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#blog" style="margin-left: 10px; color: white;">Noticias</a>
            </span>

            <span style="display: flex; align-items: center; margin-right: 20px;">
                <i class="fa fa-phone-square fa-lg" aria-hidden="true" style="color: white;"></i>
                <a href="#contact" style="margin-left: 10px; color: white;">Contato</a>
            </span>

            <!-- Menu baseado no tipo de usuário -->
            @if (usuarioAutenticado)
            {
                @if (tipoUsuario == "1")
                {
                    <!-- Menu do Administrador -->
                    <div class="dropdown" style="position: relative; display: inline-block;">
                        <span style="display: flex; align-items: center; margin-right: 20px;">
                            <i class="fa fa-user" aria-hidden="true" style="color: #F7F5F2;"></i>
                            <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                            <i class="fa fa-chevron-down" aria-hidden="true" style="color: #F7F5F2; margin-left: 5px;"></i>

                        </span>
                        <div class="dropdown-content" style="display: none; position: absolute; background-color: #F7F5F2; width: 200px; box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); z-index: 1; padding: 8px; border-radius: 3%; border: #F7F5F2 solid 1px; box-shadow: 5px #F7F5F2;">
                            <a href="/Usuario/Index" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-users" aria-hidden="true" style="margin-right: 8px;"></i>Usuarios
                            </a>
                            <a href="/Agendamento/Index" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 8px;"></i>Agendamento Admin
                            </a>
                            <a href="/Servico/Index" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fas fa-gavel fa-lg" aria-hidden="true" style="margin-right: 8px;"></i>Serviço
                            </a>
                            <a href="#logout" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-align-justify" aria-hidden="true" style="margin-right: 8px;"></i>Relatório
                            </a>
                            <a href="javascript:void(0);" onclick="logout()" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-sign-out-alt" aria-hidden="true" style="margin-right: 8px;"></i> Sair
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Menu do Usuário -->
                    <div class="dropdown" style="position: relative; display: inline-block;">
                        <span style="display: flex; align-items: center; margin-right: 20px;">
                            <i class="fa fa-user" aria-hidden="true" style="color: #F7F5F2;"></i>
                            <a href="#" style="margin-left: 10px;">@usuarioNome</a>
                            <i class="fa fa-chevron-down" aria-hidden="true" style="color: #F7F5F2; margin-left: 5px;"></i>

                        </span>
                        <div class="dropdown-content" style="display: none; position: absolute; background-color: #F7F5F2; width: 200px; box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); z-index: 1; padding: 8px; border-radius: 3%; border: #F7F5F2 solid 1px; box-shadow: 5px #F7F5F2;">
                            <a href="/Agendamento/Gerenciamento_Agendamento_Usuario" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-calendar" aria-hidden="true" style="margin-right: 8px;"></i>Agendamento User
                            </a>
                            <a href="/Agendamento/Cadastro_Agendamento" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-file" aria-hidden="true" style="margin-right: 8px;"></i>Cadastro Agendamento
                            </a>
                            <a href="javascript:void(0);" onclick="logout()" style="padding: 7px; text-decoration: none; display: flex; align-items: center; margin: 5px;">
                                <i class="fa fa-sign-out-alt" aria-hidden="true" style="margin-right: 8px;"></i> Sair
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Menu de Login (Quando o usuário não está autenticado) -->
                <div class="dropdown" style="position: relative; display: inline-block;">
                    <span style="display: flex; align-items: center; margin-right: 20px;">
                        <i class="fa fa-user" aria-hidden="true" style="color: #F7F5F2;"></i>
                        <a href="/Usuario/Login" style="margin-left: 10px;">Login</a>
                    </span>
                </div>
            }
                </nav>



                <!-- Menubar -->
                <div class="fas fa-bars" id="menu-btn"></div>

            </header>
            <!-------------------- Header Area (End) -------------------->

            <div>
                <main>
                            @RenderBody()
                </main>
            </div>

            <!-------------------- Footer Area (Start) -------------------->
            <footer>
                <div class="social">
                    <a href="https://www.facebook.com/campaign/landing.php?&campaign_id=1654787885&extra_1=s%7Cc%7C318628673247%7Ce%7Cfacebook%27%7C&placement=&creative=318628673247&keyword=facebook%27&partner_id=googlesem&extra_2=campaignid%3D1654787885%26adgroupid%3D62478117254%26matchtype%3De%26network%3Dg%26source%3Dnotmobile%26search_or_content%3Ds%26device%3Dc%26devicemodel%3D%26adposition%3D%26target%3D%26targetid%3Dkwd-362360550869%26loc_physical_ms%3D1001541%26loc_interest_ms%3D%26feeditemid%3D%26param1%3D%26param2%3D&gad_source=1&gclid=Cj0KCQjw4MSzBhC8ARIsAPFOuyX7asqA8jgimCcPt2WJsvQ6hJcsCIGhM5cxqs9tWoTq0wljemSVvTYaArcREALw_wcB"
                       class="fab fa-facebook-f"></a>
                    <a href="https://x.com/?lang=pt-br" class="fab fa-twitter"></a>
                    <a href="https://www.instagram.com/" class="fab fa-instagram"></a>
                    <a href="https://br.linkedin.com/" class="fab fa-linkedin-in"></a>
                </div>

                <div class="content">
                    <p>created by <span>AS_Designs</span> | all rights reserved</p>
                </div>
            </footer>
            <!-------------------- Footer Area (End) -------------------->

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

         <script>
        function logout() {
            // Envia a requisição AJAX para o servidor
            $.ajax({
                url: '/Usuario/Logout', // URL do método Logout no controller
                type: 'POST', // Tipo de requisição (POST)
                success: function (response) {
                    // Se a requisição for bem-sucedida
                    if (response.success) {
                        // Redireciona para a página de login ou outra página conforme desejado
                        window.location.href = '/Home/Index';
                    } else {
                        // Se houver uma mensagem de erro, exibe
                        alert('Erro ao realizar o logout: ' + (response.message || 'Erro desconhecido'));
                    }
                },
                error: function (xhr, status, error) {
                    // Se ocorrer algum erro na requisição AJAX
                    alert('Erro ao processar a solicitação de logout. Detalhes: ' + error);
                }
            });
        }
    </script>

            <!-- Magnific-Popup JS -->
            <script src="~/vendors/magnific-popup/jquery.magnific-popup.js"></script>
                    @await RenderSectionAsync("Scripts", required: false)


        </body>
        </html>
